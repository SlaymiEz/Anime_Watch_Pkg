pkgname=anime_watch
pkgver=1.0
pkgrel=1
pkgdesc="A C17 anime watching tool"
arch=('x86_64')
url="https://example.com/anime_watch"
license=('GPL')
depends=('glibc')
source=("anime_watch-1.0.tar.gz")
sha256sums=('SKIP')

build() {
  cd "${srcdir}"
  tar -xvf anime_watch-1.0.tar.gz
  cd build/src
  gcc -o anime_watch main.c
}

package() {
  cd "${srcdir}/build/src"
  install -Dm 755 anime_watch "${pkgdir}/usr/bin/anime_watch"
}